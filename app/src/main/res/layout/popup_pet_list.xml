<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup_container"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/popup_background">

    <!-- List of Pet Profiles -->
    <LinearLayout
        android:id="@+id/petListContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Pet Profile 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/petImage1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_dog"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/petName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blacky"
                        android:textSize="14sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/petGender1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="14sp"
                        android:textColor="#555555" />

                    <TextView
                        android:id="@+id/petAge1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Y.O"
                        android:textSize="14sp"
                        android:textColor="#555555" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Pet Profile 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/petImage2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/sample_cat"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/petName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kitty"
                        android:textSize="14sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:id="@+id/petGender2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textColor="#555555"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/petAge2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Y.O"
                        android:textSize="14sp"
                        android:textColor="#555555" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Add New Pet Button -->
    <Button
        android:id="@+id/addNewPetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âž• Add Pet"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/blue_paw"
        android:layout_marginTop="12dp"
        android:padding="10dp"/>
</LinearLayout>
