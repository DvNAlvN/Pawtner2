<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Pet Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pet Name"
            android:textColor="#3b5cb8"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:hint="Buddy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"/>

        <!-- Type of Pet -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type of pet"
            android:textColor="#3b5cb8"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:weightSum="2">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="#3B5CB8"
                app:strokeWidth="2dp"
                app:cardBackgroundColor="#3B5CB8">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp">

                    <ImageView
                        android:id="@+id/iconCat"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_cat"
                        app:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/textCat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cat"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="#DDDDDD"
                app:strokeWidth="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp">

                    <ImageView
                        android:id="@+id/iconDog"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_dog"
                        app:tint="#000000" />

                    <TextView
                        android:id="@+id/textDog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dog"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


        <!-- Gender -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="#3b5cb8"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:checked="true"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"/>
        </RadioGroup>

        <!-- Color -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Color"
            android:textColor="#3b5cb8"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:hint="Brownish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"/>

        <!-- Age -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textColor="#3b5cb8"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:hint="1"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"/>

        <!-- Breed -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breed"
            android:textColor="#3b5cb8"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:hint="Dalmation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"/>

        <!-- Weight -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textColor="#3b5cb8"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:hint="20"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"/>

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#3b5cb8"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:text="Buddy is a fun loving, sweet Dalmation, rescued from overseas. Loves to cuddle, and play with other dogs"/>

        <!-- Personality -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personality"
            android:textColor="#3b5cb8"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose up to 5 personality traits you’d like to share about your pet"
            android:textSize="12sp"
            android:textColor="#444"
            android:layout_marginBottom="4dp"/>
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleLine="false"
            app:selectionRequired="false"
            app:singleSelection="false"
            android:padding="8dp">

            <!-- Chip 1 -->
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:checkable="true"
                app:chipBackgroundColor="@color/chip_blue"
                android:textColor="#FFFFFFFF"
                app:checkedIconVisible="false"
                app:shapeAppearanceOverlay="@style/ChipStyle" />

            <!-- Chip 2 -->
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Affectionate"
                android:checkable="true"
                app:chipBackgroundColor="@color/chip_blue"
                android:textColor="#FFFFFFFF"
                app:checkedIconVisible="false"
                app:shapeAppearanceOverlay="@style/ChipStyle" />

            <!-- Chip 3 -->
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuddle"
                android:checkable="true"
                app:chipBackgroundColor="@color/chip_blue"
                android:textColor="#FFFFFFFF"
                app:checkedIconVisible="false"
                app:shapeAppearanceOverlay="@style/ChipStyle" />

            <!-- Chip 4 -->
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friendly"
                android:checkable="true"
                app:chipBackgroundColor="@color/chip_blue"
                android:textColor="#FFFFFFFF"
                app:checkedIconVisible="false"
                app:shapeAppearanceOverlay="@style/ChipStyle" />

        </com.google.android.material.chip.ChipGroup>



        <!-- Photo Upload -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos"
            android:textColor="#3b5cb8"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>
        <!-- Tombol Add Photo (kotak biru kecil dengan tanda + dan teks) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/photoUpload"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:text="+\nAdd Photo"
            android:textSize="14sp"
            android:textColor="#3b5cb8"
            android:gravity="center"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/photo_button_background"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Pet"
            android:textSize="16sp"
            android:textColor="#000000"
            android:backgroundTint="#F8B871"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="48dp" />

    </LinearLayout>
</ScrollView>
